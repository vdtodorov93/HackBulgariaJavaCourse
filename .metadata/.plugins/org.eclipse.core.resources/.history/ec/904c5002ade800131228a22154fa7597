package com.hackbulgaria.corejava;

public class FaultyProblem1 {
    public long getLargestPalindrome(long N) {
        //N--;
//        if (Utils.isPalindrome(N)) {
//            return N;
//        } else {
//            return getLargestPalindrome(N);
//        }
        long i = N;
        while(!Utils.isPalindrome(i)){
            i--;
        }
        return i;
    }
}
